{
  "name": "SchoolDocs",
  "private": true,
  "version": "0.1.0",
  "description": "A lightweight, developer-friendly React template with modern UI components, animations, and TypeScript support",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc --incremental --tsBuildInfoFile ./node_modules/.tmp/tsbuildinfo && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,css,md}'",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "analyze": "vite build --mode analyze",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "@react-spring/web": "9.7.3",
    "@tanstack/react-query": "5.17.19",
    "axios": "^1.8.4",
    "class-variance-authority": "0.7.0",
    "framer-motion": "11.0.6",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-error-boundary": "4.1.2",
    "react-helmet-async": "2.0.4",
    "react-hook-form": "7.50.1",
    "react-hot-toast": "2.4.1",
    "react-router-dom": "6.22.1",
    "web-vitals": "3.5.2",
    "zod": "3.22.4",
    "zustand": "4.5.0"
  },
  "devDependencies": {
    "@babel/core": "7.23.7",
    "@babel/plugin-transform-react-jsx": "7.23.4",
    "@eslint/js": "8.56.0",
    "@hookform/resolvers": "3.3.4",
    "@svgr/core": "8.1.0",
    "@svgr/plugin-jsx": "8.1.0",
    "@tailwindcss/forms": "0.5.10",
    "@tailwindcss/typography": "0.5.10",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@typescript-eslint/eslint-plugin": "6.19.0",
    "@typescript-eslint/parser": "6.19.0",
    "@vitejs/plugin-react": "^1.3.2",
    "autoprefixer": "10.4.17",
    "eslint": "8.56.0",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-react-refresh": "0.4.5",
    "jsdom": "23.2.0",
    "lint-staged": "^15.5.0",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "prettier-plugin-tailwindcss": "0.5.11",
    "simple-git-hooks": "2.9.0",
    "tailwindcss": "3.4.1",
    "typescript": "5.3.3",
    "vite": "^6.2.3",
    "vitest": "^3.0.9"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,html,json,md}": [
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "contributors": [
    {
      "name": "Chamath Thiwanka",
      "url": "https://github.com/chama-x"
    }
  ]
}
